<div class="shift-form-container">
  <%= form_with model: shift, local: true do |f| %>
    <% if shift.errors.any? %>
      <div class="error-messages">
        <p><%= pluralize(shift.errors.count, "error") %> prohibited this shift form being saved:</p>
        <ul>
          <% shift.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :work_date, "勤務日" %>
      <%= f.date_field :work_date, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :start_time, "勤務開始" %>
      <%= f.time_field :start_time, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :end_time, "勤務終了" %>
      <%= f.time_field :end_time, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :memo, "メモ" %>
      <%= f.text_area :memo, rows: 4, class: "form-textarea" %>
    </div>

    <div class="form-actions">
      <%= link_to "キャンセル", shifts_path, class: "btn btn-secondary" %>
      <%= f.submit (shift.new_record? ? "登録" : "更新"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
